# see https://editorconfig.org/
root = true

[*]
# Use Unix-style newlines for most files (except Windows files, see below).
end_of_line = lf
trim_trailing_whitespace = true
indent_style = space
insert_final_newline = true
indent_size = 4
charset = utf-8

[*.{bat,cmd,ps1}]
end_of_line = crlf

[*.{js,json}]
charset = utf-8
indent_size = 2

[*.{yml,yaml,md}]
indent_size = 2

[*.tsv]
indent_style = tab

[*.py]
charset = utf-8

[Makefile]
indent_style = tab
